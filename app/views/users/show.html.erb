<div class="row">

	<div class="col-md-4">
    <h2>Most Recent Meals</h2>
    <% if @user.made_meals.count %>
      <ul class="list-group">
        <%= render @made_meals %>
      </ul>
    <% else %>
      <p>You don't appear to have made any meals yet.</p>
    <% end %>
  </div>
  <div class="col-md-4">
    <h3>Make a Meal</h3>
    <% if @user.recipes.first %>
      <%= form_for @made_meal do |f| %>
        <%= f.label :recipe_id, "Select a Recipe to Make" %>
        <%= f.collection_select :recipe_id, @user.recipes, :id, :name %><br />
        <%= f.submit "Make this Recipe", class: "btn btn-default" %> 
      <% end %>
    <% else %>
      <p>Create some recipes first!</p>
    <% end %>
	</div>
	<div class="col-md-4">
    <h2>Pantry Stats</h2>
    <% if @user.pantry %>
      <%= render 'pantry_stats', pantry: @user.pantry %>
    <% else %>
      <%= link_to "You don't have a pantry. Create one!", new_pantry_path(@user) %>
    <% end %>
  </div>
</div>