<div class="row">
	<div class="col-xs-12 col-sm-12 col-md-12">
		<h1><%= @recipe.name %></h1>
	</div>
</div>
<div class="row">
	<div class="col-xs-12 col-sm-12 col-md-8 col-md-offset-2">
		<h3>Ingredients</h3>
		<div class="row">
			<div class="col-xs-12 col-sm-12 col-md-12">
				<ul class="list-group">
				  <%= render @recipe.items %>
			  </ul>
			</div>
		</div>
	</div>
	<div class="col-xs-12 col-sm-12 col-md-8 col-md-offset-2">
		<h3>Instructions</h3>
	  <div class="row">
	  	<div class="col-xs-12 col-sm-12 col-md-12">
	  		<ol class="list-group">
	  			<%= render @recipe.steps %>
	  		</ol>
	  	</div>
	  </div>
	</div>
</div>
<div class="row">
	<div class="col-xs-8 col-sm-6 col-md-6 col-xs-offset-2 col-sm-offset-3 col-md-offset-3">
		<p><%= link_to "Edit This Recipe", edit_recipe_path(@recipe) %> or 
			<%= link_to "Delete This Recipe", @recipe, method: :delete, data: { confirm: 'Are you sure?' } %>
		</p>
	</div>
</div>

